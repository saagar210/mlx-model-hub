{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Command Center",
  "version": "1.0.0",
  "identifier": "com.aicommandcenter.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "AI Command Center",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:4000 http://localhost:4001 http://localhost:11434 http://localhost:6379 http://localhost:3001; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI Command Center - Local LLM Gateway",
    "longDescription": "A local LLM gateway for macOS with smart routing, observability, and caching.",
    "macOS": {
      "entitlements": null,
      "minimumSystemVersion": "11.0"
    }
  }
}
