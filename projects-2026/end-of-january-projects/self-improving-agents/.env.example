# SIA Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
SIA_DATABASE_URL=postgresql://sia:sia_dev_password@localhost:5432/sia
SIA_DATABASE_POOL_SIZE=10
SIA_DATABASE_POOL_MAX_OVERFLOW=20

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
# Primary: Local Ollama
SIA_OLLAMA_BASE_URL=http://localhost:11434
SIA_OLLAMA_MODEL=qwen2.5:7b

# Embeddings (via Ollama)
SIA_EMBEDDING_MODEL=nomic-embed-text:v1.5
SIA_EMBEDDING_DIMENSIONS=768

# Reranking (via Ollama)
SIA_RERANK_MODEL=mxbai-rerank-large-v2

# Cloud fallbacks (optional)
SIA_OPENROUTER_API_KEY=
SIA_OPENROUTER_MODEL=qwen/qwen-2.5-7b-instruct:free

SIA_DEEPSEEK_API_KEY=
SIA_DEEPSEEK_MODEL=deepseek-chat

SIA_ANTHROPIC_API_KEY=
SIA_ANTHROPIC_MODEL=claude-3-haiku-20240307

# AI Command Center (if using unified gateway)
SIA_LLM_GATEWAY_URL=http://localhost:4000/v1
SIA_USE_LLM_GATEWAY=false

# ============================================================================
# API CONFIGURATION
# ============================================================================
SIA_API_HOST=127.0.0.1
SIA_API_PORT=8080
SIA_API_RELOAD=true
SIA_API_CORS_ORIGINS=["http://localhost:3000"]

# ============================================================================
# OBSERVABILITY
# ============================================================================
# Langfuse (optional)
SIA_LANGFUSE_PUBLIC_KEY=
SIA_LANGFUSE_SECRET_KEY=
SIA_LANGFUSE_HOST=http://localhost:3001

# Logging
SIA_LOG_LEVEL=INFO
SIA_LOG_FORMAT=json

# ============================================================================
# EXECUTION LIMITS
# ============================================================================
SIA_MAX_EXECUTION_TIME_SECONDS=300
SIA_MAX_RETRIES=3
SIA_DEFAULT_TEMPERATURE=0.7
SIA_DEFAULT_MAX_TOKENS=4096

# ============================================================================
# SELF-IMPROVEMENT
# ============================================================================
# Code evolution
SIA_SANDBOX_ENABLED=true
SIA_SANDBOX_TIMEOUT_SECONDS=60
SIA_SANDBOX_MEMORY_MB=512

# DSPy optimization
SIA_DSPY_TRIALS=20
SIA_DSPY_MIN_IMPROVEMENT=0.1

# Auto-improvement thresholds
SIA_AUTO_IMPROVE_SUCCESS_THRESHOLD=0.8
SIA_AUTO_IMPROVE_MIN_SAMPLES=50
