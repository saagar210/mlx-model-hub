[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "MLX-powered AI application"
requires-python = ">=3.11"
dependencies = [
    "mlx>=0.5.0",
    "mlx-lm>=0.5.0",
    "gradio>=4.0.0",
]
{% if tests %}
[project.optional-dependencies]
test = [
    "pytest>=8.0.0",
]
{% endif %}

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
