# MLX Model Hub - Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
HOST=127.0.0.1
PORT=8000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_USER=mlxhub
POSTGRES_PASSWORD=mlxhub
POSTGRES_DB=mlxhub
DATABASE_URL=postgresql+asyncpg://mlxhub:mlxhub@localhost:5433/mlxhub

# =============================================================================
# MLflow Tracking
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5001

# =============================================================================
# Storage Paths
# =============================================================================
# These should be absolute paths in production
STORAGE_BASE_PATH=./storage
STORAGE_MODELS_PATH=./storage/models
STORAGE_DATASETS_PATH=./storage/datasets

# =============================================================================
# MLX Settings
# =============================================================================
# Maximum memory for MLX operations (GB)
# Recommended: Total RAM - 12GB headroom
MLX_MEMORY_LIMIT_GB=36

# Default quantization for larger models
MLX_DEFAULT_QUANTIZATION=4bit

# =============================================================================
# Observability (Optional)
# =============================================================================
# OpenTelemetry OTLP endpoint for distributed tracing
# Uncomment to enable tracing export
# OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Grafana (Docker Compose)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
