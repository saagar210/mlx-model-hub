# MLX Model Hub Configuration
# Copy this file to .env and modify as needed

# Application
APP_NAME="MLX Model Hub"
DEBUG=false
LOG_LEVEL=INFO

# Database (PostgreSQL with asyncpg)
DATABASE_URL=postgresql+asyncpg://mlxhub:mlxhub@localhost:5432/mlxhub

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5001

# Storage paths (relative to project root or absolute)
STORAGE_BASE_PATH=./storage
STORAGE_MODELS_PATH=./storage/models
STORAGE_DATASETS_PATH=./storage/datasets

# MLX settings
MLX_MEMORY_LIMIT_GB=36
MLX_DEFAULT_QUANTIZATION=4bit

# Server
HOST=127.0.0.1
PORT=8000
