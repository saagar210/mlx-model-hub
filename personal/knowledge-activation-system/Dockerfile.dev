# Development Dockerfile (P35)
#
# Optimized for local development with hot reload.

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast package management
RUN pip install --no-cache-dir uv

# Copy dependency files
COPY pyproject.toml .

# Install dependencies (cached layer)
RUN uv pip install --system -e ".[api,ingestion,ai,fsrs,observability]"

# Copy application code (will be mounted in dev)
COPY src/ ./src/
COPY cli.py .

# Default command (can be overridden)
CMD ["uvicorn", "knowledge.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
