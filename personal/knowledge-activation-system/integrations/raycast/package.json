{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kas",
  "title": "Knowledge Activation System",
  "description": "Search and capture knowledge from anywhere",
  "icon": "extension-icon.png",
  "author": "saagar",
  "categories": ["Productivity", "Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Knowledge",
      "subtitle": "KAS",
      "description": "Search your knowledge base",
      "mode": "view"
    },
    {
      "name": "capture",
      "title": "Quick Capture",
      "subtitle": "KAS",
      "description": "Capture text to knowledge base",
      "mode": "view"
    },
    {
      "name": "stats",
      "title": "Knowledge Stats",
      "subtitle": "KAS",
      "description": "View knowledge base statistics",
      "mode": "view"
    },
    {
      "name": "review",
      "title": "Review Due",
      "subtitle": "KAS",
      "description": "Check items due for review",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiUrl",
      "title": "API URL",
      "description": "KAS API base URL",
      "type": "textfield",
      "default": "http://localhost:8000",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.66.0",
    "@raycast/utils": "^1.12.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
